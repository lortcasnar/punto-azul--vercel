{
  "version": 2,
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x",
      "includeFiles": "views/**"
    }
  },
  "routes": [
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ]
}
{
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@4"
    }
  }
}
